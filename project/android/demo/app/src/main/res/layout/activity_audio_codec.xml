<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".AudioCodecActivity">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="FunCodec 音频编码测试"
        android:textSize="20sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_marginBottom="20dp"
        android:textColor="#333333" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="正在准备模型..."
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginBottom="16dp"
        android:textColor="#666666"
        android:background="#f0f0f0"
        android:padding="12dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/encodeButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="开始编码"
            android:textSize="16sp"
            android:background="#1685a9"
            android:textColor="#ffffff"
            android:enabled="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/importWavButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="导入音频"
            android:textSize="14sp"
            android:background="#FF9800"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/shareResultButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="导出编码"
            android:textSize="14sp"
            android:background="#9C27B0"
            android:textColor="#ffffff"
            android:enabled="false" />

    </LinearLayout>

    <!-- 解码功能区域 -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="解码功能"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginBottom="12dp"
        android:textColor="#2196F3"
        android:gravity="center"
        android:background="#e3f2fd"
        android:padding="8dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp">

        <Button
            android:id="@+id/importCodesButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="导入编码"
            android:textSize="14sp"
            android:background="#2196F3"
            android:textColor="#ffffff" />

        <Button
            android:id="@+id/decodeButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="开始解码"
            android:textSize="14sp"
            android:background="#4CAF50"
            android:textColor="#ffffff"
            android:enabled="false" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="20dp">

        <Button
            android:id="@+id/playAudioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="4dp"
            android:text="播放音频"
            android:textSize="14sp"
            android:background="#FF5722"
            android:textColor="#ffffff"
            android:enabled="false" />

        <Button
            android:id="@+id/saveAudioButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="4dp"
            android:text="保存音频"
            android:textSize="14sp"
            android:background="#795548"
            android:textColor="#ffffff"
            android:enabled="false" />

    </LinearLayout>

    <TextView
        android:id="@+id/timeText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp"
        android:textColor="#4CAF50"
        android:gravity="center" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#f9f9f9"
        android:padding="12dp">

        <TextView
            android:id="@+id/resultText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textColor="#333333"
            android:lineSpacingExtra="2dp"
            android:fontFamily="monospace" />

    </ScrollView>

</LinearLayout> 